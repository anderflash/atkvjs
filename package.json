{
  "name": "atkvjs",
  "version": "0.0.1",
  "description": "Computer Graphics, Computer Vision and Image Processing JS/TS library",
  "repository": "https://github.com/anderflash/atkvjs",
  "license": "GPL-3.0",
  "author": "Anderson Carlos Moreira Tavares <acmt@outlook.com>",
  "main": "dist/atkv.js",
  "scripts": {
    "start": "tsc && npm run uglify && concurrently \"npm run tsc:w\" \"npm run lite\" ",
    "lite": "lite-server",
    "postinstall": "typings install && npm run tsc",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "tsc:t": "tsc --p tsconfig.tests.json",
    "typings": "typings",
    "test": "node_modules/karma/bin/karma start karma.conf.js --single-run --no-auto-watch --browsers Firefox",
    "test:w": "node_modules/karma/bin/karma start karma.conf.js --auto-watch --browsers Firefox",
    "doc": "node_modules/typedoc/bin/typedoc --out docs/ src/ --target es6",
    "uglify": "node_modules/uglify-js/bin/uglifyjs dist/atkv.js --compress --mangle > dist/atkv.min.js"
  },
  "devDependencies": {
    "jasmine-core": ">=2.4.1",
    "karma": ">=0.13.22",
    "karma-coverage": ">=1.0.0",
    "karma-firefox-launcher": ">=1.0.0",
    "karma-jasmine": ">=1.0.2",
    "karma-mocha-reporter": "^2.0.2",
    "karma-spec-reporter": ">=0.0.26",
    "lite-server": ">=2.2.0",
    "typedoc": ">=0.3.12",
    "typescript": "^1.8.10",
    "typings": ">=0.8.1",
    "uglify-js": "git+https://github.com/mishoo/UglifyJS2.git#harmony"
  }
}
